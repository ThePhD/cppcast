<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8"/>
        <meta http-equiv="content-type" content="text/html; charset=utf-8"/>
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1"/>

        <meta name="description" content="CppCast is the first podcast for C++ developers by C++ developers." />
        <meta name="keywords" content="cppcast,C++ podcast,podcast,c plus plus,c++,native development podcast,c++ programming podcast,developer podcast,programming podcast" />
        <meta http-equiv="content-language" content="en-us">
        <meta name="application-name" content="cppcast"/>
        <meta name="twitter.site" content="@cppcast" />
        <meta property="twitter:account_id" content="3026468769" />
        <meta name="author" content="<%= @site.author %>">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <%- @getBlock('meta').toHTML() %>

        <link rel="alternate" type="application/rss+xml" title="CppCast" href="http://cppcast.libsyn.com/rss" />
        <link href="/images/favicon.png?v=2" rel="shortcut icon">

        <title><%= @getPreparedTitle() %></title>

        <!-- Styles -->
        <link href="/styles/site.css" rel="stylesheet" media="screen">
        <%- @getBlock('styles').toHTML() %>

        <script type="text/javascript" src="//ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
        <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
        <!--[if lt IE 9]>
        <script src="/scripts/vendor/html5shiv.js"></script>
        <script src="/scripts/vendor/respond.min.js"></script>
        <![endif]-->
    </head>
    <body>
        <div id="container">
            <%- @partial('_site-header') %>
            <%- @partial('_banner', {document: @document}) %>
            <div id="site-content-container">
                <%- @content %>
                <%- @partial('_site-sidebar') %>
            </div>
            <%- @partial('_site-footer') %>
        </div>

        <!-- Scripts -->

        <%- @getBlock('scripts').add(["/scripts/vendor/jquery.fittext.js", "/scripts/vendor/jquery.audioplayer.min.js", "/scripts/site.fittext.js", "/scripts/site.audioplayer.js"]).toHTML() %>

        <!-- /Scripts -->
    </body>
</html>